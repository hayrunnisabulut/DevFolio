@{
    ViewBag.Title = "CreateProject";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Proje Oluşturma Sayfası</h2>

<form method="post">
    <label>Proje Başlığı</label>
    <input type="text" class="form-control" name="ProjectTitle" />
    <br />
    <label>Proje Kategorisi</label>
    <select name="plan" id="plan" class="form-control">
        @foreach (var item in ViewBag.Category_List)
        {
            <option value="@item.Value">@item.Text</option>
        }
    </select>
    <br />
    <label>Proje Tarihi</label>
    <input type="text" class="form-control" name="CreateDate" />
    <br />
    <button class="btn btn-info">Projeyi Kaydet</button>
</form>