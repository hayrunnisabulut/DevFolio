@model List<DevFolio2.Models.TblCategory>

@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<h2>Kategori Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <th>@item.CategoryName</th>
            <th><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-danger">Sil</a></th>
            <th><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-success">Güncelle</a></th>
        </tr>
    }
</table>

<a href="/Category/CreateCategory" class="btn btn-info">Yeni Hizmet Girişi</a>